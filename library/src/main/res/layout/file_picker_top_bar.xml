<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/file_picker_top_bar_height"
                android:background="@drawable/file_picker_top_bar">

    <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/file_picker_cancel_button_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/file_picker_submit_button_margin_left"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/file_picker_cancel_button_text_size"
            android:textColor="@color/file_picker_cancel_button_text_color"
            android:text="@string/file_picker_cancel_button_title"
            android:textAllCaps="false"
            android:padding="0dp"
            android:minWidth="@dimen/file_picker_cancel_button_min_width"
            android:minHeight="0dp"
            android:background="@android:color/transparent"
            style="?android:attr/borderlessButtonStyle"/>
    
    <Button
            android:id="@+id/submitButton"
            android:layout_width="@dimen/file_picker_submit_button_width"
            android:layout_height="@dimen/file_picker_submit_button_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/file_picker_submit_button_margin_right"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/file_picker_submit_button_text_size"
            android:textColor="@color/file_picker_submit_button_text_color"
            android:text="@string/file_picker_submit_button_title"
            android:textAllCaps="false"
            android:enabled="false"
            android:alpha="0.5"
            android:padding="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="@drawable/file_picker_submit_button"
            style="?android:attr/borderlessButtonStyle"/>
    
</RelativeLayout>