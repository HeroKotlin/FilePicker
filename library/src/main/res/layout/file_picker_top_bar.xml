<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/file_picker_top_bar_height"
                android:paddingLeft="@dimen/file_picker_top_bar_padding_horizontal"
                android:paddingRight="@dimen/file_picker_top_bar_padding_horizontal"
                android:background="@drawable/file_picker_top_bar">

    <Button
            android:id="@+id/cancelButton"
            android:layout_width="@dimen/file_picker_cancel_button_width"
            android:layout_height="@dimen/file_picker_cancel_button_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/file_picker_cancel_button_title"
            android:textSize="@dimen/file_picker_cancel_button_title_text_size"
            android:textColor="@color/file_picker_cancel_button_title_text_color"
            android:padding="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="@android:color/transparent"
            style="?android:attr/borderlessButtonStyle"/>



</RelativeLayout>